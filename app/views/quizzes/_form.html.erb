<%= form_with(model: quiz) do |form| %>
  <% if quiz.errors.any? %>
    <div style="color:red">
      <h2><%= pluralize(quiz.errors.count, "error") %> prevented the creation of this quiz.</h2>
      <% quiz.errors.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <div>
    <%= form.label :quiz_name, style: "padding-end: 0.1vw", :class => "form-label" %>
    <%= form.text_field :quiz_name, :class => "form-control"  %>
  </div>
  <div>
    <%= form.submit "Create Quiz", :class => "btn btn-info text-white"  %>
  </div>
<% end %>