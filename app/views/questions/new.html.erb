<% yield alert %>
<% if alert != nil %>
  <div> Error(s) with creating answer: </div>
  <ul>
  <% alert.each_key do |error| %>
    <% if alert[error].class == Array %>
      <% alert[error].each do |part| %>
        <li> <%= part %> </li>
      <% end %>
    <% else %>
      <li> <%= alert[error]%> </li>
    <% end %>
  <% end %>
  </ul>
<% end %>
<h1>Create a New Question</h1>
<%= form_with(model: [@quiz, @question], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Question" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <%= form.submit "Create Question", class: "btn btn-primary" %>
<% end %>
