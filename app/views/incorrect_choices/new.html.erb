<h1>New Incorrect Choice</h1>
<%= form_with(model: @incorrect_choice, url: quiz_question_incorrect_choices_path(@question.quiz, @question), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :option, "Incorrect Choice" %>
    <%= form.text_field :option, class: "form-control" %>
  </div>
  <%= form.submit "Create Incorrect Choice", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Question', quiz_question_path(@question.quiz, @question), class: 'btn btn-secondary' %>